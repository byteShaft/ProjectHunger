<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:background="@drawable/background_edit_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:gravity="left"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_favorites_list_business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:shadowColor="@android:color/holo_orange_light"
                    android:shadowRadius="3"
                    android:shadowDy="0.7"
                    android:shadowDx="0.5"
                    android:typeface="sans"
                    android:textSize="17dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_favorites_list_business_timings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="right"
                android:layout_marginRight="3dp"
                android:layout_weight="1.4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="right">
                        <ImageView
                            android:id="@+id/iv_favorites_list_business_type_pizza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:visibility="gone"
                            android:background="@mipmap/ic_favorites_business_type_pizza"/>
                        <ImageView
                            android:id="@+id/iv_favorites_list_business_type_wings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:visibility="gone"
                            android:background="@mipmap/ic_favorites_business_type_wings"/>
                        <ImageView
                            android:id="@+id/iv_favorites_list_business_type_burger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:visibility="gone"
                            android:background="@mipmap/ic_favorites_business_type_burger"/>
                        <ImageView
                            android:id="@+id/iv_favorites_list_business_type_taco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:visibility="gone"
                            android:background="@mipmap/ic_favorites_business_type_taco"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_favorites_list_number_of_ratings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#ffffff"
                            android:layout_marginRight="5dp"
                            android:textSize="12dp" />

                        <RatingBar
                            style="@android:style/Widget.Holo.RatingBar.Small"
                            android:id="@+id/rBar_favorites_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:isIndicator="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="right">
                        <ImageButton
                            android:id="@+id/ib_favorites_list_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/selector_map_marker_custom_info_window_call"/>
                        <ImageButton
                            android:id="@+id/ib_favorites_list_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/selector_map_marker_custom_info_window_menu" />
                        <ImageButton
                            android:id="@+id/ib_favorites_list_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/selector_map_marker_custom_info_window_navigate" />
                        <ImageButton
                            android:id="@+id/ib_favorites_list_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/selector_favorites_delete" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

        <TextView
            android:id="@+id/tv_favorites_list_business_formatted_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="13dp"/>
    </LinearLayout>
</LinearLayout>
